  "sourceRoot" : "src",
  "compilerOptions" : {
    "assets" : [
      {
        "include" : "core/i18n/**/*",
        "watchAssets" : true
      },
      {
        "include" : "modules/mail/mail-templates/*",
        "watchAssets" : true
      }
    ]
  }
}
